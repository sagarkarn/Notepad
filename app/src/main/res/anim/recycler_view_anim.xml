<?xml version="1.0" encoding="utf-8"?>
<set android:interpolator="@android:anim/linear_interpolator"
    xmlns:android="http://schemas.android.com/apk/res/android" android:duration="500">
    <translate android:toXDelta="100" android:fromXDelta="0"/>
    <scale android:fromXScale="1.5"
        android:toXScale="1"
        android:pivotY="50%"
        android:pivotX="50%"
        android:fromYScale="1.5%"
        android:toYScale="1"
        />
    <alpha android:fromAlpha="0"
        android:toAlpha="1"
        />
</set>